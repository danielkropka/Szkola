<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorApp.Pages.A">
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackLayout Orientation="Horizontal" Margin="20">
                <Label Text="a" FontSize="30" VerticalOptions="Start" />
                <Entry x:Name="AEntry" WidthRequest="250" VerticalOptions="Start" TextChanged="AEntry_TextChanged"/>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>