<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SwitchApp.MainPage">

    <StackLayout HorizontalOptions="FillAndExpand">
        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand">
            <Label VerticalOptions="Center" Text="Kontrast"/>
            <Switch IsToggled="False" Toggled="Switch_Toggled" />
        </StackLayout>
        <Frame x:Name="FrameBox" BackgroundColor="LightGray" VerticalOptions="FillAndExpand">
            <Label x:Name="LabelText" Text="Eluwina" HorizontalTextAlignment="Center" TextColor="Black" FontSize="36"/>
        </Frame>
    </StackLayout>

</ContentPage>
