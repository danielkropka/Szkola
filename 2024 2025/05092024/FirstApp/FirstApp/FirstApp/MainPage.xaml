<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstApp.MainPage">

    <StackLayout VerticalOptions="Center">
        <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
            <StackLayout Orientation="Horizontal">
                <Label Text="A" VerticalOptions="Center"/>
                <Entry x:Name="AEntry" WidthRequest="120" TextChanged="Handle_Input" />
            </StackLayout>
            <StackLayout Orientation="Horizontal" Margin="50,0,0,0">
                <Label Text="B" VerticalOptions="Center"/>
                <Entry x:Name="BEntry" WidthRequest="120" TextChanged="Handle_Input"/>
            </StackLayout>
        </StackLayout>
        <Button x:Name="AddBtn" HorizontalOptions="Center" Text="Dodaj" Clicked="AddBtn_Clicked"/>
        <Label x:Name="Result" Text="Wprowadź liczby, następnie wciśnij `Dodaj`" FontSize="Title" HorizontalTextAlignment="Center"/>
    </StackLayout>
</ContentPage>
