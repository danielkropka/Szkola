<Window x:Class="TBoxSliderApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TBoxSliderApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TB" Margin="10,190,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="46" TextChanged="HandleTextSlider" />
        <Slider x:Name="MySlider" Margin="82,188,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="500" Maximum="100" />
    </Grid>
</Window>
