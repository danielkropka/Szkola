<Window x:Class="apteka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:apteka"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TBNumber" TextWrapping="Wrap" Margin="340,44,351,0" FontSize="20" VerticalAlignment="Top" TextChanged="HandleInputChange" Height="62"/>
        <Button x:Name="PlusBtn" Content="+" HorizontalAlignment="Left" Margin="180,161,0,0" VerticalAlignment="Top" Height="103" Width="153" Click="HandleButtonClick" FontSize="60" IsEnabled="False"/>
        <Button x:Name="MinusBtn" Content="-" HorizontalAlignment="Left" Margin="460,161,0,0" VerticalAlignment="Top" Height="103" Width="153" Click="HandleButtonClick" FontSize="60" IsEnabled="False"/>
        <TextBlock x:Name="ResultTB" HorizontalAlignment="Center" Margin="0,304,0,0" TextWrapping="Wrap" Text="0" VerticalAlignment="Center" Height="67" Width="98" FontSize="40"/>

    </Grid>
</Window>
